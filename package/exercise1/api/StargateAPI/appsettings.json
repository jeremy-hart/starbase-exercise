{
  "ConnectionStrings": {
    "StarbaseApiDatabase": "Data Source=Data/starbase.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.SQLite" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "SQLite",
        "Args": {
          "sqliteDbPath": "Data/starbase.db",
          "tableName": "Logs",
          "storeTimestampInUtc": true
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
